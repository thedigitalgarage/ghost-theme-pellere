{{#foreach posts}}

    {{#if featured}}

        <article class="{{post_class}}">
            <a href="{{url}}" class="inner-featured {{#if feature_image}}featured-with-image" style="background-image: url({{img_url feature_image}}){{/if}}" rel="bookmark">
                <div class="inner_pellere">
                    <header class="article-header_pellere">
                        <h2 class="post-title_pellere">{{title}}</h2>
                    </header>
                    <section class="articlecontent_pellere">
                        <p>{{excerpt words="19"}}&hellip;</p>
                    </section>
                    <footer class="post-meta_pellere">
                        <span class="read-more_pellere">Read More</span>
                    </footer>
                </div>
                <div class="star_pellere"><i class="fa fa-star"></i></div>
            </a>
        </article>

    {{else}}

        <article class="{{post_class}}">
            <header class="article-header_pellere">
                <h2><a href="{{{url}}}" rel="bookmark">{{title}}</a></h2>
            </header>
            <section class="articlecontent_pellere">
                <a href="{{{url}}}">
                    <p>{{excerpt words="19"}}&hellip;</p>
                    {{#if feature_image}}
                        <a class="wrapper-image" href="{{url}}"><img class="post-image" src="{{img_url feature_image}}" alt="{{title}}" /></a>
                    {{/if}}
                </a>
            </section>
            <footer class="post-meta_pellere">
                {{#if author.profile_image}}
                    <a href="{{@blog.url}}/author/{{author.slug}}"><img class="author-thumb_pellere" src="{{author.profile_image}}" alt="Author image" nopin="nopin" /></a>
                {{/if}}
                <ul>
                    <li class="author-name_pellere"><a href="{{@blog.url}}/author/{{author.slug}}">{{author.name}}</a></li>
                    <li>
                        <time datetime="{{date format='YYYY-MM-DD'}}">{{date format='DD MMM YYYY'}}</time>
                        {{#if tags}}<span>{{tags separator=", "}}</span>{{/if}}
                    </li>
                </ul>
            </footer>
        </article>

    {{/if}}

{{/foreach}}

{{#if pagination}}{{{pagination}}}{{/if}}
